# 应用环境配置模板
# 复制此文件为 .env 并修改相应值

# 基础配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 服务器端口配置
BACKEND_PORT=8000
FRONTEND_PORT=3000
WEBRTC_PORT=8090
NGINX_PORT=80

# 数据库配置
DATABASE_URL=sqlite:///./data/devices.db
DATABASE_TIMEOUT=30

# JWT安全配置
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# RTSP配置
RTSP_TIMEOUT=10
RTSP_BUFFER_SIZE=1024000
RTSP_MAX_DELAY=500000

# 监控配置
HEARTBEAT_INTERVAL=30
MONITOR_CHECK_INTERVAL=60
ALERT_THRESHOLD=3

# 日志配置
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# 服务配置
HEARTBEAT_SERVICE_ENABLED=true
MONITOR_SERVICE_ENABLED=true

# 媒体配置
VIDEO_WIDTH=1920
VIDEO_HEIGHT=1080
VIDEO_FPS=25
VIDEO_BITRATE=1000000
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=2
AUDIO_BITRATE=128000